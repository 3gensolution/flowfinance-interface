# FlowFinance Frontend Environment Configuration

# WalletConnect Project ID (Required for wallet connections)
# Get yours at: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Contract Addresses (Deploy contracts and add addresses here)
NEXT_PUBLIC_LOAN_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CONFIGURATION_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_COLLATERAL_ESCROW_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_LTV_CONFIG_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SUPPLIER_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_FIAT_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_FIAT_LOAN_BRIDGE_ADDRESS=0x0000000000000000000000000000000000000000

# Network Configuration
# Options: baseSepolia, base, ethereum, arbitrum, optimism, polygon
NEXT_PUBLIC_DEFAULT_CHAIN=baseSepolia

# API Configuration (Optional - for backend integration)
NEXT_PUBLIC_API_URL=http://localhost:9000/api

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_FIAT_LOANS=false
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=false
